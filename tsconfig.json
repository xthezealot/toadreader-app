{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    // Best practices
    "strict": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    "baseUrl": ".",
    "paths": {
      "~/*": ["*"]
    }
  }
}
